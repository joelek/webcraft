{
	"bin": {},
	"devDependencies": {
		"@types/node": "^14",
		"typescript": "^4",
		"webpack": "^5",
		"webpack-cli": "^4"
	},
	"dependencies": {},
	"license": "UNLICENSED",
	"main": "",
	"name": "@joelek/webcraft",
	"repository": {
		"type": "git",
		"url": "https://github.com/joelek/webcraft.git"
	},
	"scripts": {
		"build": "npm run compile && npm run bundle",
		"bundle:client": "npx webpack --entry ./build/client/index.js --output-path ./dist/static/ --output-filename client.js --target web",
		"bundle:server": "npx webpack --entry ./build/server/index.js --output-path ./dist/ --output-filename server.js --target node",
		"bundle": "npm run bundle:client && npm run bundle:server",
		"clean": "rm -rf ./build/ ./node_modules/",
		"compile": "npx tsc -b",
		"preversion": "npm run build && git add ./",
		"postversion": "git push && git push --tags"
	},
	"version": "0.0.0"
}
